// homework_1.cpp : 1~10000 偶數和 & 奇數和。

#include "stdafx.h"
#include <stdio.h>
#include <stdlib.h>
#define max 10000   //定義max值為多少

int main(int argc, char * argv[])   //宣告主程式
{
	int i, odd_sum = 0, even_sum = 0;   //宣告i、odd_sum=0、even_sum=0 三個變數

	for (i = 1; i <= max; i += 2){
		//定義第一個for迴圈的條件。奇數和
		odd_sum += i;    //odd_sum = odd_sum + i
	}
	printf("%d,odd_sum = %d\n", i, odd_sum);

	for (i = 2; i <= max; i += 2){
		//定義第二個for迴圈的條件。偶數和
		even_sum += i;   //even_sum = even_sum + i		
	}
	printf("%d,even_sum = %d\n", i, even_sum);

	system("PAUSE");
	return 0;
}
