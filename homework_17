// HW_17.cpp : 奇數加總 (odd_sum)。

#include "stdafx.h"
#include <stdio.h>
#include <stdlib.h> //這一行system("pause");會用到

int main(void)
{
	int sum = 0;
	int i, n = 2;

	for (i = 1; i <= 1000;){
		sum += i;
		i = i + n;
	}

	printf("1 + 3 + 5 + ... + 995 + 997 + 999 = %d\n", sum);

	system("pause");
	return 0;
}

