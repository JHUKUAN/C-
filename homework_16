// HW_16.cpp : 偶數加總 (even_sum)。

#include "stdafx.h"
#include <stdio.h>
#include <stdlib.h> //這一行system("pause");會用到

int main(void)
{
	int sum = 0;
	int i, n = 2;

	for (i = 2; i <= 1000;){
		sum += i;
		i = i + n;
	}

	printf("2 + 4 + 6 + ... + 996 + 998 + 1000 = %d\n", sum);

	system("pause");
	return 0;
}

